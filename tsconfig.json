{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "DOM.Iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "types": ["vite/client"],
        "paths": {
            "/@/*": ["./src/renderer/*"],
            "shared/*": ["./src/shared/*"]
        }
    },
    "include": ["./src"]
}
