{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["src/renderer/*"],
            "stores/*": ["src/renderer/stores/*"],
            "components/*": ["src/renderer/components/*"],
            "utils/*": ["src/renderer/utils/*"],
            "api/*": ["src/renderer/api/*"],
            "interface/*": ["src/renderer/interface/*"],
            "assets/*": ["src/renderer/assets/*"],
            "root/*": ["/"]
        }
    },
    "include": ["./src/**/*", "./typings/index.d.ts"]
}
